{% extends "helium::layouts/default" %}

{% block content %}
    <form method="POST">
        {{ csrf_field() }}

        <h1 class="mb-4 h1">{{ form.title }}</h1>

        <div class="flex flex-1 px-8 py-6 bg-gray-100 rounded-xl">
            {% set tabs = form.fields|keys %}

            {% if tabs|length > 1 %}
                <div class="flex flex-col mr-8 border-r-2 border-gray-200">
                    {% for tab in form.tabs %}
                        <a class="helium-tab" id="helium-tab-{{ tab.slug }}" data-tab-content-id="helium-tab-content-{{ tab.slug  }}" href="#{{ tab.slug }}">
                            {{ tab.label }}
                        </a>
                    {% endfor %}
                </div>
            {% endif %}

            <div class="flex-1">
                {% for tabSlug,fields in form.fields %}
                    <div id="helium-tab-content-{{ tabSlug }}" class="helium-tab-content">
                    <div class="mb-8">
                        {% for field in fields %}
                            {% include field.view with {field: field, entry: entry} %}
                        {% endfor %}
                    </div>
                </div>
                {% endfor %}

                <div class="">
                    {% for action in form.actions %}
                        {% include action.view with {action: action, entry: entry} %}
                    {% endfor %}
                </div>
            </div>
        </div>
    </form>
{% endblock %}
