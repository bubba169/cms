{% extends "helium::layouts/default" %}

{% block content %}
    {% block title %}
        <h1 class="mb-4 h1">{{ view.title }}</h1>
    {% endblock %}

    {% block alert %}
        {% if session_has('message') %}
            {% set message = session_get('message') %}
            {% include "helium::partials/alert" with message %}
        {% endif %}
    {% endblock %}

    {% block form %}
        <div class="flex flex-1 px-8 py-6 bg-gray-100 rounded-xl">
            <form id="helium-form" method="{{ view.method }}" action="{{ view.url|resolve(entry) }}" class="w-full">
                {{ csrf_field() }}

                {% block tabs %}
                    {% set tabs = view.fields|keys %}
                    {% if tabs|length > 1 %}
                        <div class="flex flex-col pt-6 mr-8 -my-6 -ml-8 border-r-2 border-gray-200 bg-gray-50 rounded-l-xl">
                            {% for tab in view.tabs %}
                                {% block tab %}
                                    {% set error = errors.hasAny(view.validationRules(tab.slug)|keys) %}
                                    <a class="helium-tab {{ error ? 'error' }}" id="helium-tab-{{ tab.slug }}" data-tab-content-id="helium-tab-content-{{ tab.slug  }}" href="#{{ tab.slug }}">
                                        <div class="hidden error-icon">
                                            <i class="mr-2 fas fa-exclamation-circle"></i>
                                            <span class="sr-only">Error</span>
                                        </div>
                                        {{ tab.label }}
                                    </a>
                                {% endblock %}
                            {% endfor %}
                        </div>
                    {% endif %}
                {% endblock %}

                <div class="flex-1">
                    {% for tabSlug,fields in view.fields %}
                        {% block tabContent %}
                            <div id="helium-tab-content-{{ tabSlug }}" class="helium-tab-content">
                                <div class="mb-8">
                                    {% for field in fields %}
                                        {% block field %}
                                            <div class="mb-6">
                                                {% include field.template with {field: field, entry: entry} %}
                                            </div>
                                        {% endblock %}
                                    {% endfor %}
                                </div>
                            </div>
                        {% endblock %}
                    {% endfor %}

                    {% block actions %}
                        <div class="flex justify-between">
                            <div>
                                {% for action in view.actions %}
                                    {% include action.template with {action: action, entry: entry, withinForm: true} %}
                                {% endfor %}
                            </div>
                        </div>
                    {% endblock %}
                </div>
            </form>
        </div>
    {% endblock %}
{% endblock %}

{% block templateMetaBlock %}
    {% for script in form.scripts %}
        <script
            {% for attribute,value in script|default([]) %}
                {{ attribute }}="{{ value }}"
            {% endfor %}
        ></script>
    {% endfor %}
    {% for style in form.styles %}
        <link rel="stylesheet"
            {% for attribute,value in style|default([]) %}
                {{ attribute }}="{{ value }}"
            {% endfor %}
        ></script>
    {% endfor %}
{% endblock %}
