<div class="w-full mb-4">
    <label class="block w-full mb-2 text-lg font-bold" for="{{ field.id }}">{{ field.label }}</label>
    <input class="w-full p-2 border border-gray-400 rounded-lg"
        type="password"
        name="{{ field.name }}"
        id="{{ field.id }}"
        placeholder="{{ field.placeholder }}"
        {{ field.required ? 'required' }}
    >
</div>
