<div class="w-full mb-4">
    <label class="block w-full mb-2 text-lg font-bold" for="{{ field.id }}">{{ field.label }}</label>
    <div class="flex space-x-2">
        <input class="box-border inline-block w-1/2 p-2 border border-gray-400 rounded-lg"
            type="date"
            name="{{ field.name }}_date"
            id="{{ field.id }}"
            value="{{ entry ? field.value|resolve(entry)|date('Y-m-d') }}"
            placeholder="{{ field.placeholder }}"
            {{ field.required ? 'required' }}
        >
        <input class="box-border inline-block w-1/2 p-2 border border-gray-400 rounded-lg"
            type="time"
            name="{{ field.name }}_time"
            id="{{ field.id }}"
            value="{{ entry ? field.value|resolve(entry)|date('H:i:s') }}"
            placeholder="{{ field.placeholder }}"
            {{ field.required ? 'required' }}
            step="1"
        >
    </div>
</div>
