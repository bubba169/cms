{% extends "helium::form-fields.input" %}

{% block container %}
    <div class="flex space-x-2 {{ field.containerClasses }}">
        {% set currentValue = field.value|resolve(entry) %}
        {% set date_field_name = (field.name ~ '_date')|field_name(formPath) %}
        <input class="box-border w-1/2 py-2 px-3 border rounded-lg focus:outline-none focus:border-blue-700
            {{ hasErrors ? 'border-red-700' : 'border-gray-400' }}
            {{ field.classes.date ? ' ' ~ field.classes.date }}"
            type="date"
            name="{{ date_field_name }}"
            id="{{ field_id }}_date"
            value="{{ input_old(field_data_key ~ '_date', currentValue ? currentValue|date('Y-m-d')) }}"
            autocomplete="{{ field.autocomplete }}"
            {% for attribute in field.attributes.date %}
                {{ attribute.name }}{{ (attribute.value is defined ? '="' ~ attribute.value|escape ~ '"')|raw }}
            {% endfor %}
        >
        {% set time_field_name = (field.name ~ '_time')|field_name(formPath) %}
        <input class="box-border w-1/2 py-2 px-3 border rounded-lg focus:outline-none focus:border-blue-700
            {{ hasErrors ? 'border-red-700' : 'border-gray-400' }}
            {{ field.classes.time ? ' ' ~ field.classes.time }}"
            type="time"
            step="1"
            name="{{ time_field_name }}"
            id="{{ field_id }}_time"
            value="{{ input_old(field_data_key ~ '_time', currentValue ? currentValue|date('H:i:s')) }}"
            autocomplete="{{ field.autocomplete }}"
            {% for attribute in field.attributes.time %}
                {{ attribute.name }}{{ (attribute.value is defined ? '="' ~ attribute.value|escape ~ '"')|raw }}
            {% endfor %}
        >
    </div>
{% endblock %}
