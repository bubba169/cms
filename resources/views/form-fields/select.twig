<div class="w-full mb-4">
    <label class="block w-full mb-2 text-lg font-bold" for="{{ field.id }}">{{ field.label }}</label>
    {% if field.description %}
        <div class="w-full mb-2 -mt-1 text-sm text-gray-700">{{ field.description }}</div>
    {% endif %}
    <select class="box-border inline-block w-full px-2 py-2.5 bg-white border border-gray-400 rounded-lg
        {{ errors.has(field.name) ? 'border-red-700' : 'border-gray-400' }}
        {{ field.classes ? ' ' ~ field.classes }}"
        name="{{ field.name }}"
        id="{{ field.id }}"
        {{ field.required ? 'required' }}
        {% for attribute in field.attributes|default([]) %}
            {{ attribute.name }}{{ (attribute.value is defined ? '="' ~ attribute.value|escape ~ '"')|raw }}
        {% endfor %}
    >
        {% if field.placeholder is not empty %}
            <option value="">{{ field.placeholder }}</option>
        {% endif %}

        {% for name,value in field.options|options(entry, field) %}
            <option value="{{ value }}"
                {{ (entry is not empty and field.value|resolve(entry) == value) ? 'selected' }}
            >{{ name }}</option>
        {% endfor %}
    </select>

     {% if errors.has(field.name) %}
        <div class="w-full mt-2 text-sm text-red-700">
            <i class="fas fa-exclamation-circle" aria-hidden="true"></i>
            {{ errors.messages[field.name]|join(' ') }}
        </div>
    {% endif %}
</div>
