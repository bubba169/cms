<div class="w-full mb-4">
    <label class="block w-full mb-2 text-lg font-bold" for="{{ field.id }}">{{ field.label }}</label>
    <select class="box-border inline-block w-full p-2 bg-white border border-gray-400 rounded-lg"
        name="{{ field.name }}"
        id="{{ field.id }}"
        {{ field.required ? 'required' }}
    >
        {% if field.placeholder is not empty %}
            <option value="">{{ field.placeholder }}</option>
        {% endif %}

        {% for name,value in field.options|options(entry) %}
            <option value="{{ value }}"
                {{ (entry and field.value|resolve(entry) is same as(value)) ? 'selected' }}
            >{{ name }}</option>
        {% endfor %}
    </select>
</div>
