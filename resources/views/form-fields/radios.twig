<div class="w-full mb-4">
    <label class="block w-full mb-2 text-lg font-bold">{{ field.label }}</label>
    {% if field.description %}
        <div class="w-full mb-2 -mt-1 text-sm text-gray-700">{{ field.description }}</div>
    {% endif %}
    <div class="flex flex-wrap w-full px-4 pt-3 pb-1 bg-white border border-gray-400 rounded-lg
        {{ errors.has(field.name) ? 'border-red-700' : 'border-gray-400' }}
        {{ field.classes ? ' ' ~ field.classes }}"
        {% for attribute in field.attributes|default([]) %}
            {{ attribute.name }}{{ (attribute.value is defined ? '="' ~ attribute.value|escape ~ '"')|raw }}
        {% endfor %}
    >
        {% for name,value in field.options|options(entry, field) %}
            <div class="flex items-start w-full mb-3 md:w-1/2 lg:w-1/3 xl:w-1/4">
                <input type="radio"
                    class="box-border inline-block p-2 mt-1 bg-white border border-gray-400 rounded-lg cursor-pointer"
                    name="{{ field.name }}"
                    id="{{ field.id }}_{{ loop.index }}"
                    value="{{ value }}"
                    {{ (input_old(field.name, field.value|resolve(entry)) == value) ? 'checked' }}
                >
                <label class="flex-1 block ml-3 mr-5 cursor-pointer" for="{{ field.id }}_{{ loop.index  }}">{{ name }}</label>
            </div>
        {% endfor %}
    </div>

    {% if errors.has(field.name) %}
        <div class="w-full mt-2 text-sm text-red-700">
            <i class="fas fa-exclamation-circle" aria-hidden="true"></i>
            {{ errors.messages[field.name]|join(' ') }}
        </div>
    {% endif %}
</div>

