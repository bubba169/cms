<div class="w-full mb-4">
    <label class="block w-full mb-2 text-lg font-bold">{{ field.label }}</label>
    {% for name,value in field.options|options(entry, field) %}
        <div class="flex mb-2">
            <input type="radio"
                class="box-border inline-block p-2 bg-white border border-gray-400 rounded-lg cursor-pointer"
                name="{{ field.name }}"
                id="{{ field.id }}_{{ loop.index  }}"
                {{ field.required ? 'required' }}
                value="{{ value }}"
                {{ (entry and field.value|resolve(entry) == value) ? 'checked' }}
            >
            <label class="flex-1 block ml-3 cursor-pointer" for="{{ field.id }}_{{ loop.index  }}">{{ name }}</label>
        </div>
    {% endfor %}
</div>
