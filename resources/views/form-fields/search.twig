<div class="w-full">
    {% if field.type != 'hidden' %}
        <label class="block w-full mb-2 text-lg font-bold" for="{{ field.id }}">{{ field.label }}</label>
    {% endif %}
    {% if field.description %}
        <div class="w-full mb-2 -mt-1 text-sm text-gray-700">{{ field.description }}</div>
    {% endif %}
    <div class="relative flex w-full h-10">
        <label for="{{ field.id }}" class="absolute text-lg text-gray-400 top-1.5 left-2">
            <i class="fas fa-search" aria-hidden="true"></i>
            <span class="sr-only">Search</span>
        </label>
        <input id="{{ field.id }}"
            type="text"
            name="{{ field.name }}"
            placeholder="{{ field.placeholder }}"
            value="{{ field.value|resolve(entry) }}"
            class="flex-1 w-full p-2 pl-8 border border-gray-400 rounded-lg invalid-border
            {{ field.classes ? ' ' ~ field.classes }}"
            {% for attribute in field.attributes|default([]) %}
                {{ attribute.name }}{{ (attribute.value is defined ? '="' ~ attribute.value|escape ~ '"')|raw }}
            {% endfor %}
        >
    </div>
</div>
