<div class="w-full px-4 py-2 mb-4 bg-white border border-gray-400 rounded-lg">
    <div class="flex">
        <input class="scale-110 cursor-pointer transform-gpu"
            type="checkbox"
            name="{{ field.name }}"
            id="{{ field.id }}"
            {{ field.required ? 'required' }}
            {{ (entry and field.value|resolve(entry)) ? 'checked' }}
        >
        <label class="flex-1 block pl-4 font-bold cursor-pointer" for="{{ field.id }}">{{ field.label }}</label>
    </div>
</div>
