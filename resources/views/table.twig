{% extends 'helium::layouts/default' %}

{% block content %}
    <div class="mb-6">
        <form method="GET">
            <div class="flex flex-wrap items-center justify-between">
                <h1 class="h1">{{ config.table.title }}</h1>
                {% if config.table.search %}
                    {% include "helium::partials/search" %}
                {% endif %}
            </div>
            <div class="flex flex-wrap justify-between gap-2">
                {% for filter_input in config.table.filters if filter_input.slug != 'search' %}
                    <div class="flex-1">
                        {% include filter_input.view with {field: filter_input} %}
                    </div>
                {% endfor %}
            </div>
            <div class="flex w-full mb-4 {{ config.table.filters is empty ? 'hidden' }}">
                <button type="submit" class="block px-4 py-2 text-white bg-blue-900 rounded">Filter</button>
                <a href="{{ url().current }}" type="reset" class="block px-4 py-2 ml-2 text-white bg-gray-800 rounded">Reset</a>
            </div>
        </form>
    </div>

    <div class="w-full pb-4 rounded-t-lg bg-gray-50">
        <table class="w-full">
            <thead class="text-left border-b border-gray-300">
                {% for column in config.table.columns %}
                    <th class="px-4 py-3">{{ column.label }}</th>
                {% endfor %}
                <th class="px-4 py-3">Actions</th>
            </thead>
            <tbody>
                {% for entry in entries %}
                    <tr class="text-left border-b border-gray-300">
                        {% for column in config.table.columns %}
                            <td class="px-4 py-3">{% include column.view with {entry: entry, value: column.value} %}</td>
                        {% endfor %}
                        <td class="px-4 py-3">
                            {% for action in config.table.actions %}
                                {% for action in config.table.actions %}
                                    {% include action.view with {action: action, entry: entry} %}
                                {% endfor %}
                            {% endfor %}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="mt-4">
        {{ entries.withQueryString.links('pagination::tailwind')|raw }}
    </div>
{% endblock %}
